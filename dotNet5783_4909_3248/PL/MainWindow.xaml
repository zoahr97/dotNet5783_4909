        <Button x:Name="ToPassWindow" Content="Product Catalog"  FontSize="25" FontWeight="Bold" FontStyle="Italic" 
                Background="Cornsilk" Width="239" Height="88" HorizontalAlignment="Center"  VerticalAlignment="Center" Click="ToPassWindow_Click">
            <Button.Effect>
